<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">#1A237E</item>
        <item name="colorPrimaryDark">#0D47A1</item>
        <item name="colorAccent">#2962FF</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">#1A237E</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">#1A237E</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <!-- Title Text Style -->
    <style name="TitleText">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#1A237E</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Subtitle Text Style -->
    <style name="SubtitleText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#424242</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Purple Rounded Button Style -->
    <style name="PurpleButton">
        <item name="android:backgroundTint">#6200EE</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/button_rounded</item>
    </style>

    <!-- EditText Style with Rounded Background -->
    <style name="EditTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DetailTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="EmployerButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:backgroundTint">#1A237E</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
</resources>
