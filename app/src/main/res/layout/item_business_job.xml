<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#f4f6f9"
    android:padding="16dp">

    <!-- טקסטים -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_marginEnd="12dp">

        <TextView android:id="@+id/tvName" android:text="שם העסק"
            android:textSize="18sp" android:textStyle="bold"
            android:layout_width="wrap_content" android:layout_height="wrap_content" />

        <TextView android:id="@+id/tvCategory" android:text="קטגוריה"
            android:textSize="14sp" android:textColor="@android:color/darker_gray"
            android:layout_width="wrap_content" android:layout_height="wrap_content" />

        <TextView android:id="@+id/tvCity" android:text="עיר"
            android:textSize="14sp" android:textColor="@android:color/darker_gray"
            android:layout_width="wrap_content" android:layout_height="wrap_content" />

        <TextView android:id="@+id/tvPhone" android:text="טלפון"
            android:textSize="14sp" android:textColor="@android:color/darker_gray"
            android:layout_width="wrap_content" android:layout_height="wrap_content" />

        <TextView android:id="@+id/tvEmail" android:text="אימייל"
            android:textSize="14sp" android:textColor="@android:color/darker_gray"
            android:autoLink="email"
            android:layout_width="wrap_content" android:layout_height="wrap_content" />

        <TextView android:id="@+id/tvStreet" android:text="רחוב"
            android:textSize="14sp" android:textColor="@android:color/darker_gray"
            android:layout_width="wrap_content" android:layout_height="wrap_content" />

        <TextView android:id="@+id/tvWebsite" android:text="אתר"
            android:textSize="14sp" android:textColor="@android:color/darker_gray"
            android:autoLink="web"
            android:layout_width="wrap_content" android:layout_height="wrap_content" />

        <TextView android:id="@+id/tvDetails" android:text="פרטים נוספים"
            android:textSize="14sp" android:textColor="@android:color/darker_gray"
            android:layout_width="wrap_content" android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- תמונה -->
    <ImageView
        android:id="@+id/ivBusinessImage"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:scaleType="centerCrop"
        android:contentDescription="תמונת עסק" />
</LinearLayout>
